{
    "id": "nodebb-plugin-emailer-smtp",
    "url": "https://github.com/Danor/nodebb-plugin-emailer-smtp",
    "name": "Emailer SMTP",
    "description": "Plugin for NodeBB allowing you to send e-mail via SMTP.",
    "library": "./index.js",
    "templates": "./templates",
    "hooks": [
        { "hook": "filter:email.send", "method": "send" },
        { "hook": "filter:admin.header.build", "method": "admin.menu" },
        { "hook": "static:app.load", "method": "init"}
    ],
    "compatibility": "~1.1.2"
}
